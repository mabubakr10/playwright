{
  "name": "@automation-suite/smoke-e2e",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "pretest": "pnpm --filter @automation-suite/shared build",
    "pretest:feature": "pnpm run bddgen",
    "test": "playwright test",
    "test:smoke1": "playwright test --grep '@smoke1'",
    "test:smoke2": "playwright test --grep '@smoke2'",
    "test:feature": "playwright test --grep '@teams'",
    "test:critical": "playwright test --grep '@critical'",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "report:merge": "playwright merge-reports --reporter html ./blob-report",
    "bddgen": "bddgen"
  },
  "dependencies": {
    "@automation-suite/shared": "workspace:*",
    "@faker-js/faker": "^9.0.3",
    "jsdom": "^25.0.1",
    "mailosaur": "^8.8.1",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@playwright/test": "^1.53.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "playwright-bdd": "^8.3.1",
    "typescript": "^5.0.0"
  }
}
